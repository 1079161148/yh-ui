{
  "name": "yh-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "YH-UI - A Modern Vue 3 Component Library",
  "type": "module",
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm run -r --filter=./packages/* build",
    "build:components": "pnpm -C packages/components build",
    "build:theme": "pnpm -C packages/theme build",
    "build:utils": "pnpm -C packages/utils build",
    "build:hooks": "pnpm -C packages/hooks build",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:preview": "pnpm -C docs preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rimraf node_modules **/node_modules **/dist",
    "prepare": "husky",
    "version:patch": "pnpm -r exec npm version patch",
    "version:minor": "pnpm -r exec npm version minor",
    "version:major": "pnpm -r exec npm version major",
    "publish:all": "pnpm -r publish --access public",
    "perf:components": "pnpm -C packages/components build",
    "perf:nuxt": "pnpm -C playground-nuxt build"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/viewerjs": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.0",
    "@vitest/browser": "^4.0.18",
    "@vitest/coverage-v8": "^3.0.2",
    "@vue/server-renderer": "^3.5.27",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "happy-dom": "^16.6.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.56.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.83.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^3.0.2",
    "vue": "^3.5.13",
    "vue-router": "^4.6.4",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1079161148/yh-ui.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "component-library",
    "ui-components",
    "yh-ui"
  ],
  "author": "YH-UI Team",
  "license": "MIT",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "async-validator": "^4.2.5",
    "dayjs": "^1.11.19",
    "xlsx": "^0.18.5"
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.0.7"
    }
  }
}
