{
  "name": "yh-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "YH-UI - A Modern Vue 3 Component Library",
  "type": "module",
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm run -r --filter=./packages/* build",
    "build:components": "pnpm -C packages/components build",
    "build:theme": "pnpm -C packages/theme build",
    "build:utils": "pnpm -C packages/utils build",
    "build:hooks": "pnpm -C packages/hooks build",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:preview": "pnpm -C docs preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rimraf node_modules **/node_modules **/dist",
    "prepare": "husky",
    "version:patch": "pnpm -r exec npm version patch",
    "version:minor": "pnpm -r exec npm version minor",
    "version:major": "pnpm -r exec npm version major",
    "publish:all": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "happy-dom": "^16.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sass": "^1.83.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xxx/yh-ui.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "component-library",
    "ui-components",
    "yh-ui"
  ],
  "author": "YH-UI Team",
  "license": "MIT"
}
